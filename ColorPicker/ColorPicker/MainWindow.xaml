<Window x:Class="ColorPicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="30" Width="128"
        WindowStyle="None"
        ResizeMode="NoResize"
        BorderThickness="1"
        BorderBrush="#2d2d2d"
        Background="#252525"
        ShowInTaskbar="False">
    <StackPanel Orientation="Horizontal">
        <Label 
            x:Name="panelCurrentColor" 
            Width="18" Height="18" 
            Background="#fff" 
            Margin="3"></Label>
        <TextBlock 
            x:Name="labelCurrentColor" 
            Foreground="#fff" 
            Height="20" 
            Width="45"
            Margin="3"></TextBlock>
        <Button 
            x:Name="btnPalette" 
            ToolTip="Pick color from palette" 
            Height="20" 
            Margin="3">
            <Grid>
                <Image Source="Resources/palette_24_24.png"></Image>
            </Grid>
        </Button>
        <Button 
            x:Name="btnFromScreen" 
            ToolTip="Pick color from screen" 
            Height="20" 
            Margin="3">
            <Grid>
                <Image Source="Resources/dropper_24_24.png"></Image>
            </Grid>
        </Button>
    </StackPanel>
</Window>
